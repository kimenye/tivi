.container#admins-div
  #admin-create-modal.modal.hide
    .modal-header
      %button.close{'type' => 'button', 'data-dismiss' => 'modal'}
        x
      %h3 Create Admin
    %form.modal-form.form-horizontal{'data-bind' => 'submit: createAdmin'}
      .modal-body
        %fieldset
          .control-group
            %label.control-label{ 'for' => 'email' } Email
            .controls
              %input.input-medium#email{'name' => 'email', 'type' => 'email', 'data-bind' => 'value: email', 'required' => 'required'}
          .control-group
            %label.control-label{ 'for' => 'password' } Password
            .controls
              %input.input-medium#password{'name' => 'password', 'type' => 'password', 'data-bind' => 'value: password', 'required' => 'required'}
          .control-group
            %label.control-label{ 'for' => 'phone_number' } Phone Number
            .controls
              %input.input-medium#phone_number{'name' => 'phone_number', 'type' => 'text', 'data-bind' => 'value: phone_number', 'required' => 'required'}
      .modal-footer
        %a.btn{'data-dismiss' => 'modal', 'href' => '#'} Close
        %input.btn.btn-success{ 'type' => 'submit', 'value' => 'Save'}
  #admin-edit-modal.modal.hide
    .modal-header
      %button.close{'type' => 'button', 'data-dismiss' => 'modal'}
        x
      %h3 Edit or Delete Admin
    %form.modal-form.form-horizontal{'data-bind' => 'submit: editAdmin'}
      .modal-body
        %fieldset
          .control-group
            %label.control-label{'for' => 'email'} Email
            .controls
              %input.input-medium#email{'name' => 'email', 'type' => 'email', 'data-bind' => 'value: email', 'required' => 'required'}
          .control-group
            %label.control-label{'for' => 'phone_number'} Phone Number
            .controls
              %input.input-medium#phone_number{'name' => 'phone_number', 'type' => 'text', 'data-bind' => 'value: phone_number', 'required' => 'required'}
      .modal-footer
        %a.btn{'data-dismiss' => 'modal', 'href' => '#close'} Close
        %input.btn.btn-success{'type' => 'submit', 'value' => 'Save'}
        %button.btn{ 'data-bind' => 'click: $root.deleteAdmin'} Delete
  .row
    .span3
      %h1 Admin Console
  .row
    .span3.sidebar
      .well{'role' => 'navigation'}
        %ul.nav.nav-list
          %li.nav-header
            Options
          %li
            %a.home{'data-bind' => 'click: $root.newAdmin' }
              %i.icon-plus-sign
              Add Admin
          %li.nav-header
            Admins
        %ul.nav.nav-list{'data-bind' => 'foreach: admins'}
          %li
            %a.home{'data-bind' => 'click: $root.edit' }
              .span{'data-bind' => 'text: email'}
              %i.icon-edit